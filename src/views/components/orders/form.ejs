<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">
            <% if(mode === "Create") { %>
                Giả lập tạo đơn hàng mới
            <% } %>
        </h4>
        <div class="card">
            <div class="card-body">
                    <form action="/orders/simulatorCreate" method="post">
                    <div class="form-group <%= err?.discount && 'has-error has-feedback' %>">
                        <label for="code">Mức Giảm giá</label>
                        <input 
                        name="discount"
                        type="number"
                        value="<%= order?.discount %>" 
                        class="form-control" 
                        id="discount" 
                        placeholder="Nhập mã sản phẩm"
                        />
                        <small id="emailHelp" class="form-text text-muted text-danger"><%= err?.discount%></small>
                    </div>
                    <div class="form-group">
                        <label for="code">Danh sách sản phẩm</label>
                        <div id="listProduct">
                            <div style="display: flex; gap: 50px; padding: 10px" class="orderItemGroup">
                                <div class="btn btn-success itemButton" onclick="addNewOrderItem()"><i class="la la-plus"></i></div>
                                <select class="form-control form-control max-w-20 mb-4px itemSelect" name="itemSelect">
                                    <option value="">Chọn sản phẩm</option>   
                                    <% products.forEach(function(product, index){ %>
                                        <option value="<%=product._id%>" data-colors="<%=product.colors%>" data-sizes="<%=product.sizes%>" data-price="<%=product.price%>"><%=product.name%></option>                         
                                    <%})%>
                                </select>
                                <input 
                                name="quantity"
                                type="number"
                                value="<%= order?.quantity %>" 
                                class="form-control quantity" 
                                placeholder="Nhập số lượng"
                                />
                                <input 
                                name="itemPrice"
                                type="number"
                                value="<%= order?.discount %>" 
                                class="form-control itemPrice" 
                                />
                                <select class="form-control form-control max-w-20 mb-4px itemColor" name="itemColor">

                                </select>
                                <select class="form-control form-control max-w-20 mb-4px itemSize" name="itemSize">

                                </select>
                                <div class="btn btn-danger deleteOrderItem" ><i class="la la-trash"></i></div>
                            </div>
                        </div>
                    </div>
                    <p>Địa chỉ giao hàng</p>
                    <div class="form-group">
                        <label for="billingName">Tên khách hàng</label>
                                <input 
                                name="billingName"
                                type="text"
                                class="form-control" 
                                id="billingName" 
                                placeholder="Nhập tên khách hàng"
                                />
                        </div>
                    <div class="form-group">
                        <label for="billingEmail">Email</label>
                                <input 
                                name="billingEmail"
                                type="email"
                                class="form-control" 
                                id="billingEmail" 
                                placeholder="Nhập email"
                                />
                    </div>
                    <div class="form-group">
                        <label for="billingPhoneNumber">Số điện thoại</label>
                                <input 
                                name="billingPhoneNumber"
                                type="number"
                                class="form-control" 
                                id="billingPhoneNumber" 
                                placeholder="Nhập số điện thoại"
                                />
                    </div>
                    <div class="form-group">
                        <label for="billingAddress">Địa chỉ</label>
                                <input 
                                name="billingAddress"
                                type="text"
                                class="form-control" 
                                id="billingAddress" 
                                placeholder="Nhập địa chỉ"
                                />
                        </div>
                        <div class="form-group">
                            <label for="billingDistrict">Quận</label>
                                    <input 
                                    name="billingDistrict"
                                    type="text"
                                    class="form-control" 
                                    id="billingDistrict" 
                                    placeholder="Nhập quận/huyện"
                                    />
                            </div>
                            <div class="form-group">
                                <label for="billingCity">Thành phố</label>
                                        <input 
                                        name="billingCity"
                                        type="text"
                                        class="form-control" 
                                        id="billingCity" 
                                        placeholder="Nhập thành phố"
                                        />
                                </div>
                    <div class="card-action"> 
                        <button class="btn btn-success" type="submit">Tạo</button>
                        <a class="btn btn-primary" href="/orders">Danh sánh hóa đơn</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>