<div class="content">
    <div class="container-fluid">
        <h4 class="page-title">
            <% if(mode === "Create") { %>
                Tạo sản phẩm mới
            <% } %>
            <% if(mode === "Update") { %>
                Cập nhật sản phẩm mới
            <% } %>
        </h4>
        <div class="card">
            <div class="card-body">
                <% if(mode === "Create") { %>
                    <form action="/categories/create" method="post">
                <% } %>
                <% if(mode === "Update") { %>
                <% } %>
                    <div class="form-group">
                        <label for="code">Mã loại sản phẩm</label>
                        <input 
                        name="code"
                        type="text" 
                        class="form-control" 
                        id="code" 
                        placeholder="Nhập mã sản phẩm">
                    </div>
                    <div class="form-group">
                        <label for="name">Tên loại sản phẩm</label>
                        <input 
                        name="name"
                        type="text" 
                        class="form-control" 
                        id="name" 
                        placeholder="Nhập tên sản phẩm">
                    </div>
                    <div class="form-group">
                        <label for="image">Link loại Hình ảnh</label>
                        <input 
                        name="image"
                        type="text" 
                        class="form-control" 
                        id="image" 
                        placeholder="nhập link hình ảnh"
                        />
                    </div>

                    <div class="card-action"> 
                     <% if(mode === "Create") { %>
                        <button class="btn btn-success" type="submit">Tạo</button>
                    <% } %>
                    <% if(mode === "Update") { %>
                        <button class="btn btn-success" type="submit">Cập nhật</button>
                    <% } %>
                        <button class="btn btn-danger" href="/categories">Trở về danh sánh sản phẩm</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>